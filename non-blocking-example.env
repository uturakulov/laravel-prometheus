# ==============================================
# Laravel Prometheus Exporter - Non-Blocking Configuration
# ==============================================

# Basic Prometheus Settings
PROMETHEUS_NAMESPACE=app
PROMETHEUS_METRICS_ROUTE_ENABLED=true
PROMETHEUS_METRICS_ROUTE_PATH=metrics

# ==============================================
# 🚀 NON-BLOCKING MODE - Eliminates HTTP Request Delays
# ==============================================
PROMETHEUS_NON_BLOCKING_ENABLED=true

# ==============================================
# 📊 Storage Configuration
# ==============================================
PROMETHEUS_STORAGE_ADAPTER=redis

# ==============================================
# ⚡ Optimized Redis Settings for Non-Blocking
# ==============================================
PROMETHEUS_REDIS_HOST=localhost
PROMETHEUS_REDIS_PORT=6379
PROMETHEUS_REDIS_DATABASE=1
PROMETHEUS_REDIS_TIMEOUT=1.0
PROMETHEUS_REDIS_READ_TIMEOUT=30
PROMETHEUS_REDIS_PERSISTENT_CONNECTIONS=true
PROMETHEUS_REDIS_PREFIX=PROMETHEUS_

# ==============================================
# 🗃️ SQL Metrics Configuration (Optimized)
# ==============================================
PROMETHEUS_COLLECT_FULL_SQL_QUERY=false
PROMETHEUS_SQL_COLLECT_SERVICE_CALLER=false

# ==============================================
# 📈 Standard Metrics Labels
# ==============================================
PROMETHEUS_STANDARD_METRICS_OWNER=your-team
PROMETHEUS_STANDARD_METRICS_DOMAIN=your-domain
PROMETHEUS_STANDARD_METRICS_SYSTEM=your-app

# ==============================================
# 📝 Usage in bootstrap/app.php:
# ==============================================
